// Add places to Block Chain

// truffle compile
// truffle migrate or truffle migrate --reset

// truffle console

// After deploying the contract to block chain

// a get the contract address
// get the ABI of the contract and update setup file.


truffle(development)>  VizagBlocks.deployed().then(function(i) {i.addPlace('Kailasa giri', 'kailasa_giri', 'places0001').then(function(f) {console.log(f)})});
truffle(development)>  VizagBlocks.deployed().then(function(i) {i.addPlace('Vuda park', 'vuda_park', 'places0002').then(function(f) {console.log(f)})});
